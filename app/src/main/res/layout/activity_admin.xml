<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin"

    android:background="@drawable/bg">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBar"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:titleTextColor="#fff">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        android:gravity="center">
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Teacher Activity"
        android:background="@drawable/t_layout_3"
        android:padding="20dp"
        android:id="@+id/teacher"/>
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Student Activity"
        android:padding="20dp"
        android:background="@drawable/t_layout_3"
        android:id="@+id/student"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/teacher"/>
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Manage Routine"
        android:layout_below="@+id/teacher"
        android:background="@drawable/t_layout_3"
        android:padding="20dp"
        android:id="@+id/routine"
        />
    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/t_layout_3"
        android:text="Manage Subject"
        android:layout_below="@+id/student"
        android:layout_toRightOf="@+id/routine"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:id="@+id/subject"

        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/routine"
        android:background="@drawable/t_layout_3"
        android:padding="20dp"
        android:text="MANAGE CLASSES"
        android:id="@+id/classes"
        android:layout_margin="20dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classes"
        android:background="@drawable/t_layout_3"
        android:padding="20dp"
        android:text="MANAGE TEACHER ROUTINE"
        android:id="@+id/room"
        android:layout_marginLeft="20dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room"
        android:background="@drawable/t_layout_3"
        android:padding="20dp"
        android:text="MANAGE ATTENDANCE TABLE"
        android:id="@+id/att"
        android:layout_marginLeft="20dp"/>
    </RelativeLayout>




</RelativeLayout>