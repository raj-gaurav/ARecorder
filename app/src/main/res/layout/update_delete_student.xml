<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE/DELETE STUDENT"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="70dp"
        android:layout_margin="15dp"
        android:background="#6363F8"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/txt"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SID"
        android:padding="15dp"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/tid"
        android:editable="false"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:padding="15dp"
        android:layout_below="@+id/tid"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/name"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department"
        android:padding="15dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/department"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Section"
        android:padding="15dp"
        android:layout_below="@+id/department"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/section"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:padding="15dp"
        android:layout_below="@+id/section"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/email"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="15dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/password"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Join Year"
        android:padding="15dp"
        android:layout_below="@+id/password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/joinyear"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact"
        android:padding="15dp"
        android:layout_below="@+id/joinyear"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/contact"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Class Roll"
        android:padding="15dp"
        android:layout_below="@+id/contact"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/croll"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Registration"
        android:padding="15dp"
        android:layout_below="@+id/croll"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/registration"

        />





    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"

        android:background="#05921C"
        android:text="UPDATE"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/btn_update"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="#D62506"
        android:text="DELETE"
        android:layout_toRightOf="@+id/btn_update"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/btn_delete"
        />
    </RelativeLayout>

</ScrollView>